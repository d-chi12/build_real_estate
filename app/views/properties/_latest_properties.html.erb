<% @properties.each do |property| %>
  <div class="col-4">
    <div class="property border">
      <%= link_to(property_thumbnail(property), property_path(property)) %>

      <div class="property-summary p-3">
        <h3 class="h5 mt-3"><%= link_to property.name, property_path(property) %></h3>

        <span class="mr-2"><i class="fas fa-bed"></i> <%= property.rooms %></span>
        <span class="mr-2"><i class="fas fa-bath"></i> <%= property.bethrooms %></span>
        <span><i class="fas fa-car"></i> <%= property.parking_spaces %></span>

        <p class="mb-2"><%= property.address %></p>
      </div>
    </div>
  </div>
<% end %>