<div class="property-main-photo" style="background-image:url('<%= property_photo_url @property %>')"> 
  <div class="photo-overlay">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-lg-5">
          <p class="h4 mb-0"><%= @account.full_name %></p>
          <p class="mb-2"><%= @account.company %></p>
        </div>
        <div class="col-lg-7 text-center">
          <div class="row mt-sm-3 bg-light p-3">
            <div class="col-3">
              <i class="fas fa-bed text-muted ml-0"></i><br /> 
              <small><%= @properties_sold %> Sold </small>
            </div>

            <div class="col-3">
              <i class="fas fa-bed text-muted ml-0"></i><br /> 
              <small><%= @properties_for_sale %> For Sale</small>
            </div>

            <div class="col-3">
              <i class="fas fa-bath text-muted ml-0"></i><br />
              <small><%= @properties_leased %> Leased </small>
            </div> 

            <div class="col-3">
              <i class="fas fa-car text-muted ml-0"></i><br /> 
              <small><%= @properties_for_rent %> For Rent </small>
            </div> 
          </div>
        </div>
      </div>
      <div class="row border-top border-bottom mt-5 pt-4 pb-4">
        <div class="col-6">
        
        </div>
        <div class="col-6 text-right">
          <strong><%= link_to "Can I affard this property", "#", class: "text-success" %></strong>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <p class="h3"><%= @property.name %></p>
          <p class="h5">Property Description</p>
          <div id="prop-details" class="">
            <%= simple_format @account.details %>
          </div>

          <button class="btn btn-outline-info mt-3" id="toggleDetails">Show more</button>
        </div>  
      </div>
    </div>
    <div class="col-md-4">
      <%= render "properties/agent_details", agent: @account %>
    </div>
  </div>
</div>

<section class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <p class="h3 mb-3">Other properties by this agent</p>
      </div>
        <%= render "properties/list", properties: @properties %>
    </div>
  </div>
</section>

<%= render "properties/send_email_modal", agent: @account %>